{
  "name": "sunglasses-client",
  "version": "1.0.1",
  "description": "Client of Sunglasses web app",
  "main": "index.js",
  "author": "Amir Najafi <njfamirm@gmail.com>",
  "contributors": [
    "Amir Najafi <njfamirm@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "b": "npm-run-all clean:* build:*",
    "build:ts": "esbuild \"src/index.ts\" --bundle --outfile=\"public/js/index.js\" --sourcemap",
    "build:css": "esbuild \"style/index.css\" --bundle --outfile=\"public/css/index.css\" --sourcemap",
    "buildp": "npm-run-all clean:* buildp:*",
    "buildp:ts": "esbuild \"src/index.ts\" --bundle --outfile=\"public/js/index.js\" --minify",
    "buildp:css": "esbuild \"style/index.css\" --bundle --outfile=\"public/css/index.css\" --minify",
    "c": "npm-run-all clean:*",
    "clean:public": "rm -rf public/js public/css",
    "clean:ts": "tsc --build --clean && rm -rf dist",
    "f": "yarn format",
    "format": "npm-run-all --sequential format:prettier format:eslint",
    "format:eslint": "eslint **/*.ts --fix",
    "format:prettier": "prettier \"**/*.{html,json,md,ts}\" --ignore-path ./.eslintignore --write"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.4",
    "@vaadin/vaadin-charts": "^22.0.3",
    "dom-to-image": "^2.6.0",
    "esbuild": "^0.14.38",
    "file-saver": "^2.0.5",
    "lit": "^2.0.2",
    "prettier": "^2.6.2"
  },
  "devDependencies": {
    "@types/dom-to-image": "^2.6.4",
    "@types/file-saver": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "css-loader": "^6.5.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-wc": "^1.3.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.5.4"
  }
}
